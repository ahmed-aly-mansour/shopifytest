<div class="max-w-md">
    <div class="text-5xl font-bold my-4"> {{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
    </div>
    <div class="my-4">
        {% if section.settings.btn_url == blank %}
            {% assign shop_url = shop.secure_url %}
        {% else %}
            {% assign shop_url = section.settings.btn_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.btn_label }}</a>
    </div>
</div>


{% schema %}
    {
        "name": "Templage 404",
        "tag": "section",
        "class": "flex items-center justify-center text-center py-7 h-full",
        "settings": [
            {
                "type": "text", 
                "id" : "title",
                "label" : "404 Heading Title",
                "default" : "404"
            },
            {
                "type": "text", 
                "id" : "subtext_title",
                "default" : "The page that you're looking for is not found",
                "label" : "404 Subtext Title"
            },
            {
                "type": "text", 
                "id" : "btn_label",
                "default" : "Back to Homepage",
                "label" : "Button Label"
            },
            {
                "type": "url", 
                "id" : "btn_url",
                "label" : "Button url"
            }
        ]
    }
{% endschema %}
<div class="max-w-6xl flex flex-col my-10 mx-auto bg-gray-100 border border-gray-200 p-4">
    <div class="w-full flex items-center justify-between">
        <div class="py-4 px-2 flex flex-col justify-center">
            <a href="{{ prod.url }}">
                {% if prod.featured_image %}
                    <img src="{{ prod.featured_image |image_url: width: 100}}" alt="{{prod.title | escape }}" class="w-20 h-20 object-cover border" width="{{ prod.featured_image.width }}" height="{{ prod.featured_image.height }}">
                {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
                {% endif %}
            </a>
            <h2>{{prod.title}}</h2>
        </div>    
        <div class="py-4 px-2 flex flex-col justify-center">
            Free    
        </div>    
        <div class="py-4 px-2 flex flex-col justify-center">
            <a href="{{ prod.url }}" class="cursor-pointer w-full p-3 border border-gray-600 bg-gray-600 font-medium text-white">Add to cart</a>
        </div>    
    </div>        
</div>

